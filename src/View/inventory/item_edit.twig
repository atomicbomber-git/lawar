<!DOCTYPE html>
<html>
    <head>
        <title> Inventory </title>
        <link rel="stylesheet" type="text/css" href="{{ base_url() }}/public/css/bootstrap.css">
        <link rel="stylesheet" type="text/css" href="{{ base_url() }}/public/css/default.css">
        <script src="{{ base_url() }}/public/js/jquery.min.js"></script>
        <script src="{{ base_url() }}/public/js/bootstrap.js"></script>
    </head>

    <body>
        
        {# Navigation Bar #}
        {% include 'general/navbar.twig' %}

        <div class="container">

            <div class="spacer"></div>

            <fieldset>
                <legend> Sunting Item No. {{ item.id }} </legend>
            </fieldset>
            <form action="{{ path_for('inventory-process-edit', {'item_id': item.id}) }}" method="POST">
                <div class="form-group">
                    <label class="control-label"> Nama Item: </label>
                    <input class="form-control" type="text" name="name" placeholder="Nama Item" value="{{ item.name }}">
                </div>
                <div class="form-group">
                    <label class="control-label"> Deskripsi: </label>
                    <textarea class="form-control" name="description">{{ item.description }}</textarea>
                </div>
                <div class="form-group">
                    <label class="control-label"> Ukuran Item: </label>
                    <input class="form-control" name="size" type="text" placeholder="Ukuran Item" value="{{ item.size }}">
                </div>
                <div class="form-group">
                    <label class="control-label"> Tipe Item: </label>
                    <select class="form-control" name="type">
                        <option value="1"> Tipe 1 </option>
                        <option value="2"> Tipe 2 </option>
                        <option value="3"> Tipe 3 </option>
                    </select>
                </div>

                <div style="text-align: right">
                    <a href="{{ path_for('inventory') }}" class="btn btn-secondary"> Kembali </a>
                    <button class="btn btn-primary"> Ubah Data </button>
                </div>
            </form>
        </div>
    </body>
</html>