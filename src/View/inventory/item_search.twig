{% extends 'general/base.twig' %}

{% block title %} Pencarian Item {% endblock %}

{% block body %}
    {# Navigation Bar #}
    {% include 'general/navbar.twig' %}

    <div class="container">
        <div class="spacer"></div>
        <fieldset>
            <legend> Pencarian Item </legend>
        </fieldset>
        <form action="{{ path_for('inventory-filtered') }}" method="GET">
            <div class="form-group {% if message.error.keyword %} has-error {% endif %}">
                <label class="control-label"> Kata Kunci: </label>
                <input class="form-control" type="text" placeholder="Kata Kunci..." name="keyword">
                {% if message.error.keyword %} <span class="help-block"> {{ message.error.keyword }} </span> {% endif %}
            </div>
            <div class="form-group">
                <label class="control-label"> Berdasarkan: </label>
                <select class="form-control" name="filter_type">
                    <option value="name"> Nama </option>
                    <option value="size"> Ukuran </option>
                    <option value="type"> Tipe </option>
                    <option value="description"> Deskripsi </option>
                </select>
            </div>
            <div class="form-group" style="text-align: right">
                <a class='btn btn-secondary' href="{{ path_for('inventory') }}"> Kembali </a>
                <button class='btn btn-primary' href="{{ path_for('inventory') }}">
                    Cari
                    <span class="glyphicon glyphicon-search"> </span>
                </button>
            </div>
        </form>
    </div>
{% endblock %}