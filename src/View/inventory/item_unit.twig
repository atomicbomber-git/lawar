<li class="list-group-item">
    <div style="text-align: right">
        
    </div>

    <div class="well well-sm item-unit" style="padding: 2px 10px 2px 10px">
        <div>
            <h5 style="font-weight: bold">
                {% block item_index %} {% endblock %} {{ item.name }}
                (RP. {{ item.price | number_format(2, ',', '.') }})
            </h5>
        </div>
        <div> </div>
        <div style="align-items: center">
            {% block control_manage %} {% endblock %}
        </div>
    </div>

    <div style="padding: 7px">
        <div>
            <span style="display: inline-block" class="label label-default"> Ukuran: {{ item.size | upper }} </span>
            <span style="display: inline-block" class="label label-default"> Tipe: {{ item.type.name | upper }} </span>
        </div>

        <div>
            <span style="display: inline-block" class="label label-primary"> Toko: {{ item.stock_store | upper }} </span>
            <span style="display: inline-block" class="label label-primary"> Gudang: {{ item.stock_warehouse | upper }} </span>
            <span style="display: inline-block" class="label label-primary"> Event: {{ item.stock_event | upper }} </span>
        </div>
            
        <p style="margin-top: 15px">
            {% if item.description %}
                "{{ item.description }}"
            {% endif %}
        </p>                   
    </div>

    {% block control_add %} {% endblock %}
</li>