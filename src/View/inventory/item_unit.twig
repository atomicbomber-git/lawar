<li class="list-group-item">
    <div style="text-align: right">
        
    </div>

    <div class="well well-sm" style="display: flex; margin-bottom: 0px; padding: 2px 10px 2px 10px">
        <div style="flex-grow: 0">
            <h5 style="font-weight: bold"> {{ loop.index }}. {{ item.name }} </h5>
        </div>
        <div style="flex-grow: 1"> </div>
        <div style="flex-grow: 0; display: flex; align-items: center">
            <a style="margin: 0px 2px 0px 2px" href="{{ path_for('inventory-item-edit', {'item_id': item.id}) }}" class="btn btn-success btn-xs align-bottom">
                <span class="glyphicon glyphicon-cog"></span>
            </a>
            <a style="margin: 0px 2px 0px 2px" href="{{ path_for('inventory-item-delete', {'item_id': item.id}) }}" class="btn btn-danger btn-xs align-bottom">
                <span class="glyphicon glyphicon-remove"></span>
            </a>
        </div>
    </div>

    <div style="padding: 7px">
        <span style="display: inline-block" class="label label-default"> {{ item.size | upper }} </span>
        <span style="display: inline-block" class="label label-info"> {{ item.type | upper }} </span>
            
        <p>
            "{{ item.description }}"
        </p>                   
    </div>
    <div style="text-align: right">
        <a href="#" class="btn btn-primary btn-xs">
            Tambahkan
            <span class="glyphicon glyphicon-plus"></span>
        </a>
    </div>
</li>