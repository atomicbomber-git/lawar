{% extends 'general/base.twig' %}

{% block title %} Inventory | Filtered {% endblock %}

{% block body %}
{# Navigation Bar #}
    {% include 'general/navbar.twig' %}

    <div class="container">

        <div style="height: 60px"></div>

        <div class="alert alert-success">
            Menampilkan hasil pencarian <strong> {{ search_params.filter_type }} </strong> untuk kata kunci: <strong> "{{ search_params.keyword }}" </strong>.
        </div>

        <ul class="list-group">
            {% for item in items %}
                {% include 'inventory/item_unit.twig' %}
            {% endfor %}
        </ul>
    </div>

    <a href="#" class="btn btn-primary btn-sm" style="position: fixed; right: 10px; bottom: 10px">
        <span class="glyphicon glyphicon-shopping-cart"></span>
    </a>
{% endblock %}