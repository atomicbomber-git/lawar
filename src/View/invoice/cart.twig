{% extends 'general/base.twig' %}

{% block title %} Shopping Cart {% endblock %}

{% block head_extra %}
    <style>
        p {
            margin-bottom: 2px;
        }

        p.header {
            font-weight: bold;
        }

        div.well {
            margin-bottom: 5px;
        }

        h5 {
            margin: 2px;
            font-weight: bold;
        }
    </style>
{% endblock %}

{% block body %}
    {# Navbar #}
    {% include 'general/navbar.twig'%}

    <div class="container">
        <div style="height: 80px"></div>

        <fieldset>
            <legend> Keranjang Belanjaan </legend>
            <ul class="list-group">
            {% for item in cart %}
                <li class="list-group-item">
                    <div class="well well-sm">
                        <h5> {{ item.name }} ({{ item.size }}) - {{ item.type }} </h5>
                    </div>
                    <p class="header"> Qty. Toko: </p>
                    <p> {{ item.stock_store }} </p>
                    <p class="header"> Qty. Gudang: </p>
                    <p> {{ item.stock_warehouse }} </p>
                    <p class="header"> Qty. Total * Harga: </p>
                    <p> {{ item.stock_store + item.stock_warehouse }} * Rp. {{ item.price | number_format(2, '.', ',') }} = 
                        <label class="label label-success"> Rp. {{ ((item.stock_store + item.stock_warehouse) * item.price) | number_format(2, '.', ',') }} </label>
                    </p>
                </li>
            {% endfor %}
            </ul>

            <div style="text-align: right">
                <h3> Total: Rp. {{ sum | number_format(2, '.', ',') }} </h3>
            </div>

            <div style="text-align: right; padding: 10px">
                <a class="btn btn-primary">
                    Setujui Transaksi
                    <span class="glyphicon glyphicon-ok"> </span>
                </a>
            </div>

            <div id="message">
                {% include 'general/message_alert.twig' %}
            </div>

        </fieldset>

        
    </div>

{% endblock %}