{% extends 'general/base.twig' %}

{% block title %} Halaman Masuk {% endblock %}

{% block body %}

    {# Navigation Bar #}
    {% include 'general/navbar_plain.twig'%}

    <div class="container">
        <div style="height: 70px"></div>
        <fieldset>
            <legend> Masuk </legend>
            <form action="{{ base_url() }}/login" method="POST">
                <div class="form-group {% if message.error.incorrect or message.error.username %} has-error {% endif %}">
                    <label class="control-label"> Nama Pengguna: </label>
                    <input class="form-control" type="text" name="username" placeholder="Nama Pengguna">
                    {% if message.error.incorrect %}  <span class="help-block"> {{ message.error.incorrect }} </span> {% endif %}
                    {% if message.error.username %}  <span class="help-block"> {{ message.error.username }} </span> {% endif %}
                </div>
                <div class="form-group {% if message.error.incorrect or message.error.password %} has-error {% endif %}">
                    <label class="control-label"> Kata Sandi: </label>
                    <input class="form-control" type="password" name="password" placeholder="Kata Sandi">
                    {% if message.error.incorrect %}  <span class="help-block"> {{ message.error.incorrect }} </span> {% endif %}
                    {% if message.error.password %}  <span class="help-block"> {{ message.error.password }} </span> {% endif %}
                </div>

                {% if message.error.must_log_in %}
                    <div class="alert alert-danger"> Anda harus log in terlebih dahulu </div>
                {% endif %}

                {% if message.success.register %}
                    <div class="alert alert-success"> Akun berhasil didaftarkan. </div>
                {% endif %}

                <div style="text-align: right">
                    <a href="{{ path_for('signup') }}" class="btn btn-secondary"> Daftar Akun </a>
                    <button class="btn btn-primary"> Masuk </button>
                </div>
            </form>
        </fieldset>
    </div>
{% endblock %}